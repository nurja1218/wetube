extends layouts/main

block content
    .form-container
        form(action=`/video${routes.upload}`, method="post")
            label(for="videoFile") Video File
            input(type="file", id="videoFile", name="videoFile")
            input(type="text", placeholder="Title" , name="title")
            textarea(name="description", cols="20", rows="2", placeholder="Description")
            input(type="submit", value="Upload Video")